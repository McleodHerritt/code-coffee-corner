{{>header}}

{{post.title}},
{{post.content}},
{{post.user.name}}
{{post.created_on}}

<ul class="list-none">
  <!-- Loop through each post in the 'post' array provided to the template -->
  {{#each comments as |comment|}}
    <!-- List item for each post using a 'post' partial that formats the post data -->
    <li>
      {{comment.text}}
      {{comment.user.name}}
      {{comment.created_on}}

    </li>
  {{/each}}
</ul>

<h2>Leave a Comment</h2>

<form action="/api/comment/submit/{{post.id}}" method="post">
<input type="hidden" id="postID" name="postId" value="{{post.id}}" />
  <label for="comment">Comment:</label><br />
  <textarea id="comment" name="comment" rows="4" required></textarea><br />
  <input type="submit" value="Submit" />
</form>

{{#if isUserPost}}

  <a href="" id="deleteButton" class="button-style">Delete Post</a>
  <a href="/updatePost/{{post.id}}" class="button-style">Update Post</a>


  {{/if}}
<script src="../../js/deletePost.js"></script>